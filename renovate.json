{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["\\.yaml$"],
      "matchStrings": [
        "chart:\\s+(?<depName>.*)\\n.*?version:\\s+(?<currentValue>.*)"
      ],
      "depNameTemplate": "{{depName}}",
      "versioning": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchDepNames": ["*"],
      "groupName": "Helm Chart Updates",
      "schedule": ["at any time"]
    }
  ]
}
